# Database (Postgres)
POSTGRES_USER=memora
POSTGRES_PASSWORD=changeme # IMPORTANT
POSTGRES_DB=memora

# Application database settings (the app reads these to compose DATABASE_URL)
DATABASE_DRIVER=postgresql
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_USER=${POSTGRES_USER}
DATABASE_PASSWORD=${POSTGRES_PASSWORD}
DATABASE_NAME=${POSTGRES_DB}

# JWT / tokens
TOKEN_SECRET_KEY=replace_with_a_strong_random_value # IMPORTANT
TOKEN_ALGORITHM=HS256

# Password hashing
PASSWORD_ALGORITHM=sha256_crypt

# LLM settings
# If you enable LLM_ENABLED=True you must run Postgres with pgvector available.
LLM_ENABLED=False
LLM_HOST=localhost

# Port mapping for host -> container
BACKEND_PORT=8000